{
    "manifest_version": 2, 
    "name": "Visionneuse", 
    "description": "Passer Ã  un mode plus lisibles pour les sites moches", 
    "version": "1.0", 
    "permissions": [
     "unlimitedStorage",
     "notifications",
     "tabs",
     "http://*/",
     "https://*/",
     "tabs",
     "nativeMessaging",
     "storage"
    ],
    "background": {
        "scripts": [
          "background.js"
        ],
        "persistent": true
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js; object-src 'self'",
    "browser_action": {   
     "default_icon" : "128.png",
     "default_popup": "popup/popup.html" 
    },
    "icons": { 
     "128" : "128.png" 
    }
   }